<p><%= @user.id %>:<%= @user.name %>のページ</p>
<p>メールアドレス: <%= @user.email %></p>
<p>作成日: <%= @user.created_at %></p>
<p>更新日: <%= @user.updated_at %></p>

<% if @user.present? %>
    <%= link_to "タスク一覧", tasks_path(@user.id) %>
  <% end %>

  <table>
  <thead>
    <tr>
      <th>タスク名</th>
      <br>
      <th>詳しい内容</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th>登録日時</th>
      <th>優先度</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="task_row"><% @tasks.each do |task| %></div>
      <tr>
        <td id=<%= "tasks-index_task-#{task.id}-name" %>><%= task.name %></td>
        <td id=<%= "tasks-index_task-#{task.id}-note" %>><%= task.note %></td>
        <td id=<%= "tasks-index_task-#{task.id}-limit" %>><%= task.limit %> </td>
        <td><%= task.status %></td>
        <td><%= l task.created_at %></td>
        <td><%= task.choice %> </td>
    
        </td>
      </tr>
    <% end %>
  </tbody>

</table>