<br>
<p><%= @user.id %>:<%= @user.name %>のページ</p>
<p>メールアドレス: <%= @user.email %></p>


<%#= if @user.present? %>
<%#= link_to "タスク一覧", tasks_path(@user.id) %>
<%#= end %>

  <table>
  <thead>
    <tr>
    <th>タスク名</th>
    <th>詳しい内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>登録日時</th>
    <th>優先度</th>
    </tr>
  </thead>
  
  <tbody>
    <div class="user_row"><% @user.tasks.each do |user| %></div>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.note %></td>
        <td><%= user.limit %></td>
        <td><%= user.status %></td>
        <td><%= l user.created_at %></td>
        <td><%= l user.updated_at %></td>
      </tr>
    <% end %>
    
  </tbody>

  <br>
</table>

